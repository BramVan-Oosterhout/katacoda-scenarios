           -C /var/www/foswiki/data/Sandbox
           Ex02*.txt Ex02*,* 
    );
  $cmd = join( " ", @command ); `$cmd`; 
#  `tar --wildcards -xvzf /tmp/SolutionExampleTopics.tgz -C /var/www/foswiki/data/Applications SolutionExApp/SolutionExForm*`;
  refresh( 'Applications/SolutionExApp' );
}
